{
  "name": "KasirPro",
  "version": "1.0.0",
  "description": "Aplikasi Kasir Hybrid (Offline + Firebase Sync)",
  "author": "Aamamaludin",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "desktop": "electron .",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.kasir.hybrid",
    "productName": "KasirPro Desktop",
    "files": [
      "dist/**/*",
      "main.cjs",
      "electron/preload.cjs",
      "electron/db.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "better-sqlite3": "^12.4.1",
    "firebase": "^11.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "vite": "^6.2.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^3.4.14",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20"
  }
}